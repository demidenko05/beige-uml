<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    	    
    <include layout = "@layout/for_indexz" />
      
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/name" />
    
    <EditText
        android:id="@+id/tfItsName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />
	    
    </LinearLayout>
        	    
    <Spinner
        android:id="@+id/cmbItsKind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <CheckBox
        android:id="@+id/cbIsReversed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cbIsReversed" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/frame" />
    
    <EditText
        android:id="@+id/tfItsFrame"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:inputType="text" />
	    
    </LinearLayout>
        	        
    <Spinner
        android:id="@+id/cmbFrameRole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <CheckBox
        android:id="@+id/cbIsRightSideOfFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cbIsRightSideOfFrame" />
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/tfInteractionUseStart" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

	    <EditText
	        android:id="@+id/tfInteractionUseStart"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:inputType="text" />

	    <Button
	        android:id="@+id/btInteractionUseStart"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/sign_choose" />
	    
	    <Button
	        android:id="@+id/btClearInteractionUseStart"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/sign_clear" />
	    
	</LinearLayout>
    
    <CheckBox
        android:id="@+id/cbIsLeftSideOfInteractionUseStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cbIsLeftSideOfInteractionUseStart" />
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/tfInteractionUseEnd" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

	    <EditText
	        android:id="@+id/tfInteractionUseEnd"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:inputType="text" />

	    <Button
	        android:id="@+id/btInteractionUseEnd"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/sign_choose" />
	    
	    <Button
	        android:id="@+id/btClearInteractionUseEnd"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/sign_clear" />
	    
	</LinearLayout>
    
    <CheckBox
        android:id="@+id/cbIsRightSideOfInteractionUseEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cbIsRightSideOfInteractionUseEnd" />
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/tfLifeLineStart" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

	    <EditText
	        android:id="@+id/tfLifeLineStart"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:inputType="text" />

	    <Button
	        android:id="@+id/btLifeLineStart"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/sign_choose" />
	    
	    <Button
	        android:id="@+id/btClearLifeLineStart"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/sign_clear" />
	    
	</LinearLayout>
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/tfLifeLineEnd" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

	    <EditText
	        android:id="@+id/tfLifeLineEnd"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:inputType="text" />

	    <Button
	        android:id="@+id/btLifeLineEnd"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/sign_choose" />
	    
	    <Button
	        android:id="@+id/btClearLifeLineEnd"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/sign_clear" />
	    
	</LinearLayout>
    
    <LinearLayout
        style="?android:attr/buttonBarStyle" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:measureWithLargestChild="true" >
             
        <include layout = "@layout/for_dialog_apply_ok_close" />
        
    </LinearLayout>
	    
  </LinearLayout>
</ScrollView>
